<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.springmvc.daoAdmin.TokenDao">

	<insert id="add" parameterType="Token">
		INSERT INTO token (
		adminId,
		token,
		createTime,
		expiredTime
		)
		VALUES
		(
		#{adminId},
		#{token},
		#{createTime},
		#{expiredTime}
		)
	</insert>

	<delete id="clearExpired">
		DELETE
		FROM
		token
		WHERE
		expiredTime <![CDATA[<]]>
		NOW()
	</delete>

	<delete id="clean" parameterType="Integer">
		DELETE
		FROM
		token
		WHERE
		adminId=#{0}
	</delete>

	<select id="verifyToken" resultType="Admin">
		SELECT
		b.*
		FROM
		token a
		LEFT
		JOIN admin b
		ON (a.adminId = b.id)
		WHERE
		token = #{0}
	</select>
	
	
	<delete id="deleteUser" parameterType="Integer">
		DELETE
		FROM
		admin
		WHERE
		id=#{0}
	</delete>
	
	<delete id="deleteUserLevel" parameterType="Integer">
		delete from `level` where `level`.adminId = #{0}
	</delete>

</mapper>